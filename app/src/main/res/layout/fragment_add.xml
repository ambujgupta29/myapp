<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        >


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_item_main"
                        android:layout_width="130dp"
                        android:layout_height="190dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_baseline_add_box_24">


                    </ImageView>
                    <TextView
                        android:id="@+id/thumbnail_img1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Thumbnail"
                        android:textSize="15dp"
                        android:textColor="@color/colorBlack"
                        android:padding="2dp"
                        android:gravity="center"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/image_item_main1"
                    android:layout_width="130dp"
                    android:layout_height="190dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_add_box_24">

                </ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/image_item_main2"
                    android:layout_width="130dp"
                    android:layout_height="190dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_add_box_24">

                </ImageView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item:"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                />
            <EditText
                android:id="@+id/item_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:hint="Item To Be Sold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/description_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/description_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:hint="Enter Details And Condition"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/price_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:inputType="number"
                android:hint="Enter Price Of Item"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Category:"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/hostelblock_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Hostel Block:"
                android:textColor="@color/colorBlack"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/spinner_hostelblock"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:layout_weight="1">

            </Spinner>


        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/bupublish"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:background="@drawable/rounded_corners"
                android:elevation="0dp"
                android:layout_marginTop="25dp"
                android:text="Publish"
                android:layout_below="@+id/phonenumbertext"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite">

            </Button>


        </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    </LinearLayout>